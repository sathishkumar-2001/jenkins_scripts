pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/sathishkumar-2001/jenkins-test.git'
            }
        }
        stage('Build') {
            steps {
                echo "Building..."
            }
        }
        stage('Test') {
            steps {
                echo "Running Tests..."
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying Application..."
            }
        }
    }
}
